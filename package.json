{
  "name": "sully-medical-translator",
  "version": "1.0.0",
  "description": "Real-time medical translation between English-speaking clinicians and Spanish-speaking patients",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "openai": "^4.20.1",
    "ws": "^8.14.2",
    "uuid": "^9.0.1",
    "sqlite3": "^5.1.6",
    "prisma": "^5.7.1",
    "@prisma/client": "^5.7.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "medical",
    "translation",
    "real-time",
    "voice",
    "openai",
    "healthcare"
  ],
  "author": "Sully Hackathon Team",
  "license": "MIT"
}
